<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LoginController">
    <StackPane HBox.hgrow="ALWAYS">
         <Pane style="-fx-background-color: #58355E;" />


         <Label style="-fx-text-fill: white; -fx-font-size: 80px; -fx-padding: 20 0 0 0;" text="Project Manager" StackPane.alignment="TOP_CENTER" />

         <Label style="-fx-text-fill: white; -fx-font-size: 80px; -fx-padding: 20 0 0 0;" text="Project Manager" StackPane.alignment="TOP_CENTER" />

         <Pane prefHeight="413.0" prefWidth="550.0" style="-fx-background-color: #58355E;">
         <children>
               
               <Label alignment="CENTER" layoutX="31.0" layoutY="23.0" prefHeight="119.0" prefWidth="489.0" style="-fx-text-fill: white; -fx-font-size: 70px; -fx-padding: 20 0 0 0;" text="Project Manager" />
         </children></Pane>

    </StackPane>

    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: EFEFEF;" HBox.hgrow="ALWAYS">
        <children>
            <Label style="-fx-text-fill: black; -fx-font-size: 50px;" text="Welcome" />
         <TextField fx:id="txt_username" promptText="username" />
         <TextField fx:id="txt_password" promptText="password" />

            <Button fx:id="loginButton" onMouseClicked="#login" prefHeight="0.0" prefWidth="141.0" style="-fx-background-color: #D7C7D9; -fx-text-fill: white; -fx-font-size: 20px;" text="Log In" />

            <Button fx:id="signUpButton" onMouseClicked="#goSignUp" style="-fx-text-fill: black; -fx-background-color: EFEFEF; -fx-font-size: 10;" text="Sign Up" textFill="#45471c" />
         <Label fx:id="lbl_error" />

        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</HBox>
